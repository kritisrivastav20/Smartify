<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <View
                android:id="@+id/vw_bt_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/unselected_background"
                android:hapticFeedbackEnabled="true"
                app:layout_constraintEnd_toStartOf="@+id/vw_bt_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ib_room_edit" />

            <View
                android:id="@+id/vw_bt_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/unselected_background"
                android:hapticFeedbackEnabled="true"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_6"
                app:layout_constraintEnd_toStartOf="@+id/vw_bt_6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/vw_bt_4"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_6" />

            <View
                android:id="@+id/vw_bt_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/unselected_background"
                android:hapticFeedbackEnabled="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/vw_bt_5"
                app:layout_constraintTop_toBottomOf="@+id/vw_bt_1" />

            <View
                android:id="@+id/vw_bt_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/unselected_background"
                android:hapticFeedbackEnabled="true"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_5"
                app:layout_constraintEnd_toStartOf="@+id/vw_bt_5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_5" />

            <View
                android:id="@+id/vw_bt_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/unselected_background"
                android:hapticFeedbackEnabled="true"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/vw_bt_2"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_2" />

            <View
                android:id="@+id/vw_bt_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/unselected_background"
                android:hapticFeedbackEnabled="true"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_1"
                app:layout_constraintEnd_toStartOf="@+id/vw_bt_3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/vw_bt_1"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_1" />

            <ImageView
                android:id="@+id/iv_bt_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="TODO"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_1"
                app:layout_constraintEnd_toEndOf="@+id/vw_bt_1"
                app:layout_constraintStart_toStartOf="@+id/vw_bt_1"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_1"
                app:srcCompat="@drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="TextView"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/ib_room_edit"
                app:layout_constraintEnd_toStartOf="@+id/ib_room_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ib_room_edit" />

            <ImageButton
                android:id="@+id/ib_room_edit"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="0dp"
                android:src="@drawable/ic_menu_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/iv_bt_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_2"
                app:layout_constraintEnd_toEndOf="@+id/vw_bt_2"
                app:layout_constraintStart_toStartOf="@+id/vw_bt_2"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_2"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <ImageView
                android:id="@+id/iv_bt_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_3"
                app:layout_constraintEnd_toEndOf="@+id/vw_bt_3"
                app:layout_constraintStart_toStartOf="@+id/vw_bt_3"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_3"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_menu_manage" />

            <ImageView
                android:id="@+id/iv_bt_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_4"
                app:layout_constraintEnd_toEndOf="@+id/vw_bt_4"
                app:layout_constraintStart_toStartOf="@+id/vw_bt_4"
                app:layout_constraintTop_toBottomOf="@+id/iv_bt_1"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_4"
                app:srcCompat="@drawable/ic_menu_send" />

            <ImageView
                android:id="@+id/iv_bt_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_5"
                app:layout_constraintEnd_toEndOf="@+id/vw_bt_5"
                app:layout_constraintStart_toStartOf="@+id/vw_bt_5"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_5"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_menu_share" />

            <ImageView
                android:id="@+id/iv_bt_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/vw_bt_6"
                app:layout_constraintEnd_toEndOf="@+id/vw_bt_6"
                app:layout_constraintStart_toStartOf="@+id/vw_bt_6"
                app:layout_constraintTop_toTopOf="@+id/vw_bt_6"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_menu_slideshow" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>