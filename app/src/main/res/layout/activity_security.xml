<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_mobile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF"
    tools:context="com.smartyfy.SecurityActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_xs"
        android:text="By : Smartyfy Technologies # 7790003000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:id="@+id/ll_enter"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_l"
            android:text="ENTER"
            android:background="#0FFF"
            android:id="@+id/bt_enter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:weightSum="3"
        android:id="@+id/ll_4row"
        android:layout_above="@+id/ll_enter"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:background="#0FFF"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="0"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_0" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_l"
            android:layout_weight="1"
            android:background="#0FFF"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:id="@+id/bt_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:weightSum="3"
        android:id="@+id/ll_3row"
        android:layout_above="@+id/ll_4row"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="7"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_7" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="8"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_8" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="9"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_9" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:weightSum="3"
        android:id="@+id/ll_2row"
        android:layout_above="@+id/ll_3row"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="4"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_4" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="5"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_5" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="6"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_6" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:weightSum="3"
        android:id="@+id/ll_1row"
        android:layout_above="@+id/ll_2row"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:textSize="@dimen/text_xl"
            android:background="#0FFF"
            android:id="@+id/bt_1" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="2"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_2" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:text="3"
            android:layout_weight="1"
            android:background="#0FFF"
            android:id="@+id/bt_3" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ib_back"
        android:background="#0FFF"
        android:visibility="gone"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ib_back"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Enter Software Key"
        android:textColor="#000"
        android:textSize="@dimen/text_l" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/et_text_field"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/ib_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_unfilled_circle"
            android:id="@+id/iv_1" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_unfilled_circle"
            android:id="@+id/iv_2" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_unfilled_circle"
            android:id="@+id/iv_3" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_unfilled_circle"
            android:id="@+id/iv_4" />
    </LinearLayout>
</RelativeLayout>
